{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Catégories</h1>

    <table class="table table-striped table-hover" border="1">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
        </tbody>
    </table>

    <dl class="record_actions">
        <dt>
            <a href="{{ path('adminCategories') }}" class="btn">
                Retour à la liste
            </a>
        </dt></br>
        <dt>
            <a href="{{ path('adminCategories_edit', { 'id': entity.id }) }}" class="btn">
                Modifier
            </a>
        </dt></br>
        <dt>{{ form(delete_form) }}</dt>
    </dl>
{% endblock %}
