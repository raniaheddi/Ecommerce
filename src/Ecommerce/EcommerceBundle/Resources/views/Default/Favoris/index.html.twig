{% extends "::layout/base.html.twig" %}

{% block body %}
    <h1>Liste Des Favoris</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('favoris_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('favoris_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('favoris_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('favoris_new') }}">
                Nouveau favoris
            </a>
        </li>
    </ul>
{% endblock %}
